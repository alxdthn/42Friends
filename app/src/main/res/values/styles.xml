<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoteLine">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="fontFamily">@font/oxygen</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BasicText">
        <item name="fontFamily">@font/oxygen</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="BasicButton">
        <item name="fontFamily">@font/oxygen</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:background">@color/transparency</item>
    </style>

    <style name="WindowHeader">
        <item name="fontFamily">@font/oxygen</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FullScreenDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

</resources>
