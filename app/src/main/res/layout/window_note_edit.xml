<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/edit_note_window">

	<TextView style="@style/WindowHeader"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Edit note" />

	<TextView style="@style/BasicText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Header:"/>


	<EditText style="@style/BasicText"
		android:id="@+id/editNoteHeader"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<TextView style="@style/BasicText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Note:"/>

	<EditText style="@style/BasicText"
		android:id="@+id/editNoteContent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button style="@style/BasicButton"
			android:background="@color/transparency"
			android:id="@+id/cancelEditNote"
			android:layout_weight="50"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:text="CANCEL"/>
		<Button style="@style/BasicButton"
			android:id="@+id/confirmEditNote"
			android:layout_weight="50"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:text="ACCEPT"/>
	</LinearLayout>

</LinearLayout>