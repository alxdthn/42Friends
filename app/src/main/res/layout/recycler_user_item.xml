<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/home_user_item_height"
	app:cardCornerRadius="0dp"
	app:cardBackgroundColor="@color/white10"
	app:cardElevation="1dp">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/txvUserLogin"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:gravity="center_vertical"
			android:textColor="@color/white100"
			android:textSize="30sp"
			android:textAlignment="center"
			app:fontFamily="@font/nunito_light"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="NALEXAND" />

		<TextView
			android:id="@+id/txvUserHost"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:textColor="@color/white100"
			android:textSize="20sp"
			android:textAlignment="center"
			app:fontFamily="@font/nunito_light"
			app:layout_constraintTop_toBottomOf="@id/txvUserLogin"
			tools:text="host" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>